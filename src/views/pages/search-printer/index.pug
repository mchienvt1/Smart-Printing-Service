extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/printer-layout.pug

block main

  .container.d-flex.flex-row.justify-content-between.my-4
    .col-sm-12
      .col-7.d-flex.flex-column
        div(style="width: 100%")
          +box-head("Tìm máy in")
        .input-group.mb-3
          form(action="/searchPrinter/printerList" method="GET")
            input.form-control(type='text' placeholder="Nhập vị trí muốn in trong trường" aria-label="Nhập vị trí muốn in trong trường" aria-describedby='button-addon2')
            .input-group-append
              button#button-addon2.btn.btn-outline-secondary(type="submit") Tìm kiếm
      .col-7.d-flex.flex-column
        div(style="width: 100%")
          +box-head("Danh sách máy in")

        .list-group.listprinter
          each item in printers
            a.list-group-item.list-group-item-action(href="#")
              .d-flex.w-100.justify-content-between 
                h5.mb-1 Máy in tại #{item.location}
              p.mb-1 Trạng thái: #{item.state}